
h2
  text-align center
  margin 40px 0

section
  lost-center width

  &:last-of-type
    margin-bottom 50px


input
  background base-light
  padding 0 12px
  font-size font-size
  display inline-block
  border none
  width 120px
  height 50px

  &:focus,
  &:active
    outline none


.measure
  display flex
  margin 0 20px 20px 0
  box-shadow 4px 4px 4px rgba(black, 0.4)
  position relative
  align-items center
  background-color base-light


.balance, .cash
  lost-column 1/1

  label
    width 80px

  input
    width 169px

.income
  lost-column 1/1

  input
    order 1

.measure-label
  // background-color pink
  background-color base-dark
  color white
  height 50px
  width @height
  text-align center
  line-height 50px
  color text
  cursor pointer

  &:hover
    background-color darken(base-dark, 3)




@media screen and (min-width: 400px)
  .income
    lost-column 1/2

  .balance, .cash
    lost-column 1/1


@media screen and (min-width: 800px)
  .income
    lost-column 1/3

  .balance, .cash
    lost-column 1/3



@media screen and (min-width: 900px)
  .income
    lost-column 1/4

  .balance, .cash
    lost-column 1/3



